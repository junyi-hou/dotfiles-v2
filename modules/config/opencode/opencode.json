{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    // see https://github.com/xenodium/agent-shell/issues/225
    "question": "deny"
  },
 "plugin": ["@tarquinen/opencode-dcp@latest"],
  "provider": {
